<section class="top-index p-5 row">
  <div class="search-form p-3 col-8">

    <h3>Ready for the next adventure?</h3><br>
    <form action="#" method="POST">
      <div class="form-group row align-items-center">
        <div class="col-auto input-category">
          <select class="custom-select mr-sm-2" id="inlineFormCustomSelect">
            <option selected>Where do you want to start...</option>
            {{#each cities}}
            <option value={{this}}>{{this}}</option>
            {{/each}}
          </select>
        </div>
      </div>
      
      {{#each categories}}
      <div class="form-check form-check-inline">
        <input class="form-check-input" type="checkbox" id="inlineCheckbox1" value="option1">
        <label class="form-check-label" for="inlineCheckbox1">{{this}}</label>
      </div>
      {{/each}}

      <br> <br>
      <button type="submit" class="btn btn-primary">Start search</button>
    </form>
  </div>
</section>

