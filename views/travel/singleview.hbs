

<div class="row">
  <div class="col-2"></div>
  <div class="col-8">
    <h2 class="text-center mt-4 mb-4">{{travel.title}}</h2>
  </div>
  <div class="col-2 px-0"><img src="/images/heart.png" class="img-fluid heart"></div>
</div>

{{!-- carousel --}}
<div id="controls" class="carousel slide" data-interval="false">
  <div class="carousel-inner light-green">
    <div class="carousel-item active">
      <img class="d-block" src={{travel.photos.[0]}}>
    </div>
    {{#each photoArray}}
    <div class="carousel-item">
      <img class="d-block" src={{this}}>
    </div>
    {{/each}}
  </div>
  <a class="
        carousel-control-prev" href="#controls" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#controls" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>

<section class="m-5">
  <div class="px-5">
    <p class="font-weight-bold">Where I started:</p>
    <p>{{travel.start}}</p><br>
    <p class="font-weight-bold">What I did:</p>
    <p>{{travel.description}}</p>
    {{#each travel.category}}
    <button class="btn btn-light">{{this}}</button>
    {{/each}}
  </div>
</section>

    <p>
        <a href="/travel/edit/{{travel._id}}" class="edit-button">EDIT</a>
    </p>
