<div class="row heartrow">
  <div class="col-2"></div>
  <div class="col-8">
    <h2 class="text-center mt-4 mb-4">{{travel.title}}</h2>
  </div>
  <div class="col-2">
    <form class="px-0 form-group" action="/like/{{travel._id}}" method="post">
      <button type="submit" class="btn heart-button"><img src={{heart}} class="img-fluid heart"></button>
    </form>
  </div>
</div>

{{!-- carousel --}}
<div id="controls" class="carousel slide" data-interval="false">
  <div class="carousel-inner light-green">
    <div class="carousel-item active">
      <img class="d-block" src={{travel.photos.[0]}}>
    </div>
    {{#each photoArray}}
    <div class="carousel-item">
      <img class="d-block" src={{this}}>
    </div>
    {{/each}}
  </div>
  <a class="
        carousel-control-prev" href="#controls" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#controls" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>

<section class="m-5">
  <div class="px-5">
    <h5 class="font-weight-bold">Where I started:</h5>
    <p>{{travel.start}}</p>
    <hr>
    <h5 class="font-weight-bold">What I did:</h5>
    <p>{{travel.description}}</p>
    <hr>
    {{#each travel.category}}
    <button class="btn btn-light light-green text-white">{{this}}</button>
    {{/each}}
    {{#if canEdit}}
    <br>
    <button class="btn btn-primary mt-4" type="submit"><a href="/travel/edit/{{travel._id}}" class="edit-button">EDIT</a></button>
    {{/if}}
  </div>