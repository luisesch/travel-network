<h2 class="text-center mt-4 mb-4">Edit your experience</h2>

<form action="/travel/edit/{{travel._id}}" method="POST" id="edittravel" enctype="multipart/form-data" class="p-5 light-green">

  <div class="form-group">
    <label for="title">Title</label><br>
    <input id="title" type="text" name="title" class="w-50" value="{{travel.title}}" required>
  </div>

  <div class="
      form-group">
    <label for="category">Categories</label><br>
    {{#each categories}}
    <div class="form-check form-check-inline">
      <input class="form-check-input" type="checkbox" name="category" value={{this}}>
      <label class="form-check-label" for={{this}}>{{this}}</label>
    </div>
    {{/each}}
  </div>

  <div class="form-group">
    <label for="start">Where did you start</label><br>
    <div class="input-category w-50">
      <select class="custom-select" name="start">
        {{#each cities}}
        <option value="{{this}}">{{this}}</option>
        {{/each}}
      </select>
    </div>
  </div>
  <div class="form-group">
    <label for="description">Description</label><br>
    <textarea class="form-control w-50" id="description" id="description" name="description" rows="4" value="{{travel.description}}"
      required>{{travel.description}}</textarea>
  </div>
  <div class="form-group">
    <label for="photos">Add pictures</label><br>
    <input id="photos" type="file" name="photos" value="{{travel.photos}}" multiple>
  </div>
  <div class="row">
    {{#each travel.photos}}
    <div class="col-1 text-center mb-4">
      <a href="#">
        <img src={{this}} class="img-fluid rounded mb-1">
      </a>
      <div>
        <button type="submit" class="btn btn-sm btn-danger"><a href="/photo/delete/{{this}}">Delete</a></button>
      </div>
    </div>
    {{/each}}
  </div>
  {{#if message}}
  <div class="error-message text-center w-50 mb-3 p-2">{{ message }}</div>
  {{/if}}
  <br>
  <button class="btn btn-primary" type="submit">Edit</button>
</form>