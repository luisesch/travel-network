<h2 class="text-center mt-4 mb-4">Edit profile</h2>

<form action="/profile/{{user._id}}/editpassword" method="POST" id="form" class="p-3 pl-5 light-green">
  <div class="form-group">
    <label for="password">New password </label><br>
    <input id="password" type="password" name="password">
  </div>
  <div class="form-group">
    <label for="passwordRepeat">Repeat new password </label><br>
    <input id="passwordRepeat" type="password" name="passwordRepeat">
  </div>

  {{#if message}}
  <div class="error-message text-left w-25 mb-3 p-2">{{ message }}</div>
  {{/if}}

  <button type="submit" class="btn btn-primary">Change password</button>
</form>

<form action="/profile/{{user._id}}/editpicture" method="POST" id="form" enctype="multipart/form-data" class="p-3 pl-5 light-green">
  <div class="form-group">
    <label for="profilepic">Upload new photo</label><br>
    <input id="profilepic" type="file" name="profilepic" value="">
  </div>
  <button type="submit" class="btn btn-primary">Change profile picture</button>
</form>