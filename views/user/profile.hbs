<h2 class="text-center mt-4 mb-4">Welcome to your profile, {{user.username}}</h2>


<section class="user-info p-3 mb-5">
  <div class="row text-center">
    <div class="col-2"></div>
    <div class="col-8">
      <img src={{user.photo}} class="img-fluid rounded-circle profile-pic">
    </div>
    <div class="col-2 px-0">
      <form action="/profile/{{user._id}}/edit" method="get" class="text-right">
        <button class="btn light-green edit-button pt-0"><img src="/images/gear_icon.png" class="img-fluid"></button>
      </form>
    </div>
  </div>
</section>

<section class="user-travels px-5 mb-4">
  <div class="row">
    <h3 class="col-9">Your travels</h3>
    <a class="col-3 pt-2 text-right" href="#">See all</a>
  </div>
  <div class="row p-3">
    {{#each travels}}
    <div class="col-xs-3 col-md-3 text-center mb-4">
      <a href="/travel/{{this._id}}">
        <img src={{this.photos.[0]}} class="img-fluid rounded mb-1">
        <h6>{{this.title}}</h6>
      </a>
      <div>
        <button type="submit" class="btn btn-sm btn-primary"><a href="#">Edit</a></button>
        <button type="submit" class="btn btn-sm btn-danger"><a href="#">Delete</a></button>
      </div>
    </div>
    {{/each}}
    <div class="col-xs-3 col-md-3 text-center mb-4">
      <a href="/travel/add"><img src="/images/plus_icon.png" class="img-fluid rounded mb-1"></a>
      <h6>Add new travel</h6>
    </div>
</section>

<section class="user-favorites px-5 pt-4 mb-4 light-green">
  <div class="row">
    <h3 class="col-10">Your favorites</h3>
    <a class="col-2 pt-2 text-right" href="#">See all</a>
  </div>
  <div class="row p-3">
    {{#each favorites}}
    <div class="col-xs-3 col-md-3 text-center mb-4">
      <a href="/travel/{{this._id}}">
      <img src={{this.photos.[0]}} class="img-fluid rounded mb-1">
      <h6>{{this.title}}</h6>
      </a>
      <div>
        <button type="submit" class="btn btn-sm btn-primary"><a href="/travel/edit/{{this._id}}">Edit</a></button>
        <button type="submit" class="btn btn-sm btn-danger"><a href="#">Delete</a></button>
      </div>
    </div>
    {{/each}}
    <div class="col-xs-3 col-md-3 text-center mb-4">
      <a href="#"><img src="/images/magnifier_icon.png" class="img-fluid rounded mb-1"></a>
      <h6>Get more inspiration</h6>
    </div>
</section>

<section class="edit-profile px-5 mb-4 text-right">
  <button class="btn btn-primary"><a href="/logout">Logout</a></button>
</section>

