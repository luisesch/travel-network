<h2 class="text-center mt-4 mb-4">Welcome to your profile, {{user.username}}</h2>


<section class="user-info p-3 mb-5">
  <div class="row text-center">
    <div class="col-2"></div>
    <div class="col-8">
      <img src={{user.photo}} class="img-fluid rounded-circle profile-pic">
    </div>
    <div class="col-2 px-0">
      <form action="/profile/{{user._id}}/edit" method="get" class="text-right">
        <button class="btn light-green edit-button pt-0"><img src="/images/gear_icon.png" class="img-fluid"></button>
      </form>
    </div>
  </div>
</section>

<section class="user-travels px-5 mb-4">
  <div class="row">
    <h3 class="col-9">Your travels</h3>
    <a class="col-3 pt-2 text-right" href="/profile/yourtravels">See all</a>
  </div>
  <div class="row p-3">
    {{#each travels}}
    <div class="card mx-4 mb-4 light-green" style="width: 15rem;">
      <a href="/travel/{{this._id}}">
        <img class="card-img-top" src={{this.photos.[0]}}>
      </a>
      <div class="card-body">
        <a href="/travel/{{this._id}}">
          <h5 class="card-title">{{this.title}}</h5>
        </a>
        <button type="submit" class="btn btn-sm btn-primary"><a href="/travel/edit/{{this._id}}">Edit</a></button>
        <button type="submit" class="btn btn-sm btn-danger"><a href="/travel/delete/{{this._id}}">Delete</a></button>
      </div>
    </div>
    {{/each}}
    <div class="card mx-4 mb-4 light-green" style="width: 15rem;">
      <a href="/travel/add"><img src="/images/plus_icon.png" class="card-img-top">
        <div class="card-body">
          <h5>Add new travel</h5>
        </div>
      </a>
    </div>
  </div>
</section>

<section class="user-favorites px-5 pt-4 mb-4 light-green">
  <div class="row">
    <h3 class="col-10">Your favorites</h3>
    <a class="col-2 pt-2 text-right" href="/profile/yourfavorites">See all</a>
  </div>
  <div class="row p-3">
    {{#each favorites}}
    <div class="card mx-4 mb-4" style="width: 15rem;">
      <a href="/travel/{{this._id}}">
        <img class="card-img-top" src={{this.photos.[0]}}> </a>
      <div class="card-body">
        <a href="/travel/{{this._id}}">
          <h5 class="card-title">{{this.title}}</h5>
        </a>
        <form class="px-0 form-group" action="/like/{{this._id}}" method="post">
          <button type="submit" class="btn btn-sm btn-danger">Unlike</button>
        </form>
      </div>
    </div>
    {{/each}}
    <div class="card mx-4 mb-4" style="width: 15rem;">
      <a href="/travel/alltrips"><img src="/images/magnifier_icon.png" class="card-img-top"></a>
      <div class="card-body">
        <a href="/travel/alltrips">
          <h5>Get more inspiration</h5>
        </a>
      </div>
    </div>
  </div>
</section>